@model EntityLayer.Concrete.Category

@{
	ViewData["Title"] = "AddCategory";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row">
	<div class="col-lg-12">
		<div class="ibox ">
			<div class="ibox-title">
				<h5>New Category</h5>
			</div>
			<div class="ibox-content">
				<form method="post" action="/Admin/Category/AddCategory/">
					<div class="form-group row">
						<label class="col-lg-2 col-form-label">Category</label>
						<div class="col-lg-10">
							<input type="text" class="form-control" name="CategoryName">
						</div>
					</div>
					<div class="form-group row">
						<label class="col-lg-2 col-form-label">Description</label>
						<div class="col-lg-10"><textarea class="form-control" name="CategoryDescription"></textarea></div>
					</div>
					<div class="form-group row">
						<div class="col-lg-offset-2 col-lg-10">
							<button class="btn btn-sm btn-success" type="submit">Add Category</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
