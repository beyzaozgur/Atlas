@model EntityLayer.Concrete.Message

@{
	ViewData["Title"] = "SendMessage";
	Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Message Details</h4>
			<form method="post" action="/Message/SendMessage/" class="forms-sample">
				<input type="hidden" name="ReceiverID" value="@ViewBag.receiverId">
				<div class="form-group">
					<label for="msgSubject">To</label>
					<text type="text" class="form-control" id="msgSubject">@ViewBag.receiver</text>
				</div>
				<div class="form-group">
					<label for="msgSubject">Subject</label>
					<input type="text" class="form-control" id="msgSubject" name="Subject">
				</div>
				<div class="form-group">
					<label for="msgContent">Content</label>
					<textarea class="form-control" id="msgContent" rows="4" name="MessageDetails"></textarea>
				</div>
				<button type="submit" class="btn btn-gradient-primary mr-2">Send</button>
			</form>
		</div>
	</div>
</div>



