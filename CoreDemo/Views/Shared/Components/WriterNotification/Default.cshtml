@using EntityLayer.Concrete

@model List<Notification>

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <h6 class="p-3 mb-0">Notifications</h6>
    <div class="dropdown-divider"></div>
    @foreach(var item in Model) {
        <a class="dropdown-item preview-item" href="/Blog/BlogReadAll/@item.Comment.BlogID">
        <div class="preview-thumbnail">
            <div style="color:@item.NotificationTypeColor">
                <i class="@item.NotificationTypeSymbol"></i>
            </div>
        </div>
        <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
            <h6 class="preview-subject font-weight-normal mb-1">@item.NotificationType</h6>
            <p class="text-gray ellipsis mb-0">@item.NotificationDetails</p>
        </div>
    </a>
    }
    <div class="dropdown-divider"></div>
    <a href="/Notification/AllNotification/"><h6 class="p-3 mb-0 text-center">See all notifications</h6></a>
</div>