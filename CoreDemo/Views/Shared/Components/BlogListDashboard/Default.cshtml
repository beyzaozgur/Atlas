@using EntityLayer.Concrete
@model List<Blog>

<div class="row">
	<div class="col-12 grid-margin">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Recent Blogs</h4>
				<div class="table-responsive">
					<table class="table">
						<tbody>
							@foreach(var item in Model)
							{
								<tr>
									<td>
										<img src="~/BlogImages/@item.BlogImage" class="mr-2" alt="image">
									</td>
									<td> @item.BlogTitle </td>
									<td>
										<label class="badge badge-gradient-success">@item.Category.CategoryName</label>
									</td>
									<td> @(((DateTime)item.CreateDate).ToString("dd.MM.yyyy")) </td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
