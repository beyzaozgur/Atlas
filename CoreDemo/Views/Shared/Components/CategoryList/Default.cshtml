@model List<CoreDemo.ViewModels.CategoryCountListViewModel>

<div class="tech-btm">
	<h4>Categories</h4>
	<ul class="list-group single">
		@foreach (var item in Model.OrderByDescending(m => m.BlogCount))
		{
			<li class="list-group-item d-flex justify-content-between align-items-center">
				@item.CategoryName
				<span class="badge badge-primary badge-pill">@item.BlogCount</span>
			</li>
		}
	</ul>
</div>