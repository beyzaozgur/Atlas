@model IEnumerable<EntityLayer.Concrete.Comment>


<div class="comment-top">
	@if (Model.Count() != 0)
	{
		<h4>Comments</h4>
		@foreach (var item in Model)
		{
			<div class="media">

				<img width="80" height="80" style="border-radius: 50%;" src="~/WriterImageFiles/@item.User.ImageUrl" alt="" class="img-fluid" />
				<div class="media-body">
					<h5 class="mt-0">@item.CommentUserName - "@item.CommentTitle"</h5>
					@item.CommentContent
					<br />
					<small>
						@(((DateTime)item.CommentDate).ToString("dd.MM.yyyy"))
					</small>
				</div>

			</div>
			<br />
		}
	}
	else
	{
		<h4>There are no comments yet. Make the first comment.</h4>
	}
</div>
