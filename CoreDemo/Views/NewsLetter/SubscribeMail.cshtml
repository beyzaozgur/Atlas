<div class="tech-btm">
    <p>Be informed about new articles.</p>
	<form method="post">
		<input type="email" id ="email" placeholder="Email" required="" name="Mail">
		<input type="submit" id="btn" value="Subscribe">
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/coreblogtema/web/js/jquery-2.2.3.min.js"></script>


<script type="text/javascript">
    $("#btn").on('click', function (event) {

        event.preventDefault(); // Prevent the page from redirecting (prevents sweet alert closing suddenly after appearing)

        let values = {
            Mail: $("#email").val()
        };
        
        $.ajax({
            type: "POST",
            url: "/NewsLetter/SubscribeMail",
            data: values,
            success: function (response) {
                if (response.result) {
                    Swal.fire({
                        position: 'center',
                        icon: 'success',
                        title: 'Subscribed to e-mail newsletter!',
                        showConfirmButton: false,
                        timer: 2000
                    })
                }
            }
        });
    });
</script>


